#! /usr/bin/env bash

if [ -z "$1" ]; then
	echo "Usage: $0 <game>"
	exit 1
fi

output=$(flatpak run com.github.Matoking.protontricks -s $1)
game_id=$(echo $output | grep -oP '\(\K\d+\)' | sed 's/)//')
if [ -z "$game_id" ]; then
	echo "Could not find game id for $1"
	exit 1
fi

xdg-open /home/deck/.steam/steam/steamapps/compatdata/$game_id/pfx/drive_c/users/steamuser/My\ Documents/My\ Games/
