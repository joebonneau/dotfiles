    filenames=( "~/git_repos/dotfiles/fish/config.fish" "~/git_repos/dotfiles/fish/conf.d/abbr.fish" "~/git_repos/dotfiles/fish/conf.d/abbr.fish" )
    for filename in $filenames; do
        escaped_filename=$(echo $filename | sed 's/\./\\./g')
        quoted_filename="'$escaped_filename'"
        tmux list-sessions -F '#{session_name}' \
            | xargs -I{} tmux list-windows -t {} -F '#{window_id}' \
            | xargs -I{} tmux list-panes -t {} -F '#{pane_id}' \
            | xargs -I{} tmux send-keys -t {} "source $quoted_filename" Enter
    end
